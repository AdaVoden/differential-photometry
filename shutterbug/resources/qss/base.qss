QWidget {
    color: {{ text }};
}

QMainWindow {
    background: {{ bg_0 }};
}

#outliner {
    min-height: 300px;
    margin: 0px;
    border-radius: 6px;
}

#outliner > QTreeView {
    background-color: {{ bg_1 }};
    alternate-background-color: {{ bg_2 }};
    border-bottom-right-radius: 6px;
    border-bottom-left-radius: 6px;
}

#outliner > QTreeView::item:hover {
    background: {{ bg_4 }};
}

#outliner > QTreeView::item:selected {
    background: {{ bg_4 }};
}

#sidebar {
    background: {{ bg_0 }};
    margin: 0px;
    max-width: 400px;
    border-radius: 6px;
}

#multiviewer {
    background: {{ bg_4 }};
    border-radius: 4px;
    border: 1px solid {{ bg_3 }};
}

#viewer {
    margin: 0px;
    background: {{ bg_1 }};
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
}

#toolProperties, #imageProperties, #graphProperties {
    background: {{ bg_4 }};
    border-bottom-right-radius: 6px;
}

#properties > QTabWidget {
    background: {{ bg_0 }};
    left: 2px;
}

#properties > QTabWidget::tab-bar {
    top: 10px;
}


#properties > QTabWidget::pane {
    bottom: 2px;
    border-bottom-right-radius: 6px;
    border-bottom-left-radius: 6px;
}

#properties > QTabWidget > QTabBar::tab {
    background: {{ bg_2 }};
    margin-top: 2px;
    margin-left: 2px;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    padding-bottom: 7px;
    padding-top: -7px;
    height: 30px;
    width: 30px;
}

#properties > QTabWidget > QTabBar::tab:selected {
    background: {{ bg_4 }};
}

#properties > QTabWidget > QTabBar::tab:hover {
    background: {{ bg_3 }};
}

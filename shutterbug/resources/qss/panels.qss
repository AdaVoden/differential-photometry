#collapsibleSection {
    min-width: 100%;
    border: none;
    border-radius: 8px;
    padding: 8px;
}

#collapsibleSection > #header {
    width: 100%;
    background: {{ bg_2 }};
    text-align: left;
    text-transform: none;
    padding: 4px;
    max-height: 40px;
    border: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

#collapsibleContentBody {
    border: none;
    background-color: {{ bg_3 }};
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
}

#collapsibleSection > #header:Hover {
    background: {{ bg_primary }};
}

#popover {
    background-color: transparent;
}

#popover > #collapsibleSection {
    border: none;
    background: rgba(30, 30, 30, 150);
    border-radius: 8px;
}

#popover > #collapsibleSection > QPushButton{
    border: none;
    background: rgba(40, 40, 40, 150);
    border-radius: 8px;
}


#popover > QToolButton {
    background: rgba(30, 30, 30, 150);
    border: none;
    border-radius: 8px;
    padding: 6px 12px;
    max-width: 40px;
    max-height: 40px;
    margin-top: 10px;
    margin-left: 10px;
}
#popover > QToolButton:checked {
    background: rgba(80, 80, 80, 220);
}
